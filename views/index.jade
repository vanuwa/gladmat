extends layout

block content
  .form-title.text-center
    h1 Gladmat registrering

  .container-fluid
    .row
      .col-md-offset-4.col-md-4
        form(action='/' method='POST')
          p
            label Company name
            input.form-control(name='company_name' type='text')

          p
            label Organization number
            input.form-control(name='organization_number' type='text')

          p
            label Email address
            input.form-control(name='email' type='text')

          p
              label First name
              input.form-control(name='first_name' type='text')

          p
            label Last name
            input.form-control(name='last_name' type='text')


          p
            label Name of the stand
            input.form-control(name='stand_name' type='text')

          p
            label Address line 1
            input.form-control(name='address_line1' type='text')

          p
            label Address line 2
            input.form-control(name='address_line2' type='text')

          p
            label Billing address
            input.form-control(name='billing_address' type='text')

          p
            label ZIP code
            input.form-control(name='zip_code' type='text')

          p
            label City
            input.form-control(name='city' type='text')

          p
            label Phone
            input.form-control(name='phone' type='text')

          p
            label Mobile
            input.form-control(name='cellphone' type='text')

          p
            label Website
            input.form-control(name='website' type='text')

          p
            label Standard stand (tent, open until 21:00)
            input.form-control(type='text')

          p
            label Other Size on stand
            input.form-control(type='text')

          p
            label Other Size of trolley
            input.form-control(type='text')

          p
            label Opening hours to 24:00 (+ 5000, -)
            input.form-control(type='text')

          p
            label Licence open until 21:00 (+ 10.000, -)
            input.form-control(type='text')

          p
            label Licence open until 24:00 (+ 27.000, -)
            input.form-control(type='text')

          p
            label Extra outdoor space (sqm)
            input.form-control(name='extra_space' type='text')

          p
            label We shall provide the following
            input.form-control(name='addition' type='text')

          p
            label Gladmat Straight (proposal)
            input.form-control(name='proposal' type='text')

          p
            label Comment
            input.form-control(name='note' type='text')

          p
            input.form-control.btn-info(type='submit')