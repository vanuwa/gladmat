.form-title.text-center
    h3.text-uppercase UTSTILLERSØKNAD - GLADMAT 2016 - 20.-23. juli 2016

.container-fluid
    .panel.panel-default
        .panel-body
            .row
                .col-md-offset-2.col-md-4.col-sm-offset-1.col-sm-5.col-lg-offset-3.col-lg-3
                    dl
                        dt Firmanavn
                        dd= company_name

                    dl
                        dt Navn på stand
                        dd= stand_name

                    dl
                        dt Kontaktperson
                        dd= contact_person

                    dl
                        dt Adresse
                        dd= address

                .col-md-4.col-sm-5.col-lg-3
                    dl
                        dt Organisasjonsnummer
                        dd= tax_id

            .row
                .col-md-offset-2.col-md-4.col-sm-offset-1.col-sm-5.col-lg-offset-3.col-lg-3
                    dl
                        dt Postnummer
                        dd= zip_code

                    dl
                        dt Telefon
                        dd= phone

                    dl
                        dt Email
                        dd= email

                .col-md-4.col-sm-5.col-lg-3
                    dl
                        dt Poststed
                        dd= city

                    dl
                        dt Mobil
                        dd= cellphone

                    dl
                        dt Webside
                        dd= website

        .row
            .col-md-offset-2.col-md-8.col-sm-offset-1.col-sm-10.col-lg-offset-3.col-lg-6
                dl
                    dt Fakturaadresse
                    dd= billing_address


    .panel.panel-default
        .panel-body
            .row
                .col-md-offset-2.col-md-8.col-sm-offset-1.col-sm-10.col-lg-offset-3.col-lg-6
                    dl
                        dt Standard stand (telt, åpent til 21:00)
                        dd= stand_until_21

                    dl
                        dt Åpningstid til 24:00 (+ 5.000,-)
                        dd= opening_hours_to_24

                    dl
                        dt Bevilling åpent til 21:00 (+ 10.000,-)
                        dd= license_open_until_21

                    dl
                        dt Bevilling åpent til 24:00 (+ 27.000,-)
                        dd= license_open_until_24

                    dl
                        dt Ekstra uteareal (kvm)
                        dd= extra_space

                    dl
                        dt Vi skal tilby følgend
                        dd= additional_requirements

    .panel.panel-default
        .panel-body
            .row
                .col-md-offset-2.col-md-8.col-sm-offset-1.col-sm-10.col-lg-offset-3.col-lg-6
                    dl
                        dt Gladmatrett (forslag)
                        dd= proposal

                    dl
                        dt Kommentar
                        dd= note

    include ../terms.jade

    form(action='/complete', method='POST')
        .row
            .col-md-offset-3.col-md-6.text-center
                .checkbox
                    label
                        input(type='checkbox' name='terms_accepted' checked='checked')
                        | <strong><i>Jeg har lest og godtatt kontrakstbetingelsene</i></strong>

        .row
            .col-md-offset-2.col-md-4
                .download-pdf-btn.btn.btn-link(href='#{pdf_path}')
                    img(src='/images/icon_pdf.png' alt='Download PDF' title='Download PDF')
            .col-md-4.text-right
                input.btn.btn-success(type='submit' value='Accept / Complete')

    script.
        $('[name=terms_accepted]').on('change', function (event) {
            if (event.currentTarget.checked) {
                $('form .btn-success').attr('disabled', '');
            } else {
                $('form .btn-success').attr('disabled', 'disabled');
            }
        });